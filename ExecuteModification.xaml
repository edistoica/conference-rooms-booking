<Window x:Class="Proiect_BD.ExecuteModification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proiect_BD"
        mc:Ignorable="d"
        Title="Execute Modification" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Numele noii sali:" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="Nume_Sala" Width="200" Height="40" Grid.Row="1" />
        <Label Content="Noua data aleasa:" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <DatePicker Height="30" HorizontalAlignment="Center" Name="datePicker" VerticalAlignment="Center" Width="160" Grid.Row="2" SelectedDateChanged="datePicker_SelectedDateChanged"/>

        <Button Click="Ok_button" Content="OK" Height="40" Width="75" Grid.Row="4"/>
    </Grid>
</Window>
